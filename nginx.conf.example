# Пример конфигурации Nginx для деплоя приложения
# Скопируйте этот файл в nginx.conf и настройте под вашу инфраструктуру

server {
    listen 80;
    listen [::]:80;
    server_name defectively-nimble-rattail.cloudpub.ru;

    # Редирект на HTTPS (раскомментируйте, если используете SSL)
    # return 301 https://$server_name$request_uri;

    # Корневая директория со статическими файлами из dist/
    root /var/www/gsm-converter/dist;
    index index.html;

    # Логирование
    access_log /var/log/nginx/gsm-converter-access.log;
    error_log /var/log/nginx/gsm-converter-error.log;

    # Максимальный размер загружаемого файла
    client_max_body_size 50M;

    # Проксирование API запросов к backend
    location /api {
        proxy_pass http://localhost:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Таймауты для больших файлов
        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
    }

    # Раздача статических файлов (JS, CSS, изображения)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        try_files $uri =404;
    }

    # Обработка всех остальных запросов через index.html (для SPA)
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Безопасность: скрыть версию nginx
    server_tokens off;

    # Заголовки безопасности
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
}

